<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acceuille">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/icone"
        android:layout_marginTop="@dimen/marTop"
        android:layout_above="@+id/txt"
        android:layout_marginBottom="80dp"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir Bayiri, c'est choisir de
rendre facile votre vie
quotidienne"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        />
    <ProgressBar
        android:id="@+id/id_progress"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/txt"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:indeterminateDuration="7000"
        android:indeterminateDrawable="@drawable/progress_bar_design"
        />

</RelativeLayout>