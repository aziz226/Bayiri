<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdConnect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icone"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayiri"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_below="@+id/icon"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrer vos coordonnÃ©es"
            android:layout_below="@+id/txt"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_marginLeft="@dimen/margLeft"
            android:layout_marginRight="@dimen/margRight"
            android:layout_marginTop="20dp"
            android:hint="Nom d'utilisateur"
            android:id="@+id/i1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ad_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margLeft"
            android:layout_marginRight="@dimen/margRight"
            android:layout_marginTop="10dp"
            android:hint="Code"
            android:layout_below="@+id/i1"
            android:id="@+id/i2"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admi_co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>

       <!-- <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/i2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margLeft"
            android:layout_marginRight="@dimen/margRight"
            android:hint="Code 2"
            android:id="@+id/i3"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admi_co3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout> -->

        <Button
            android:id="@+id/open_ad_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ouvrir"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/margRight"
            android:layout_marginRight="@dimen/margRight"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/i2"
            />

        <TextView
            android:id="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ouvrir"
            android:layout_below="@+id/open_ad_btn"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@color/blue"
            android:layout_marginLeft="@dimen/margLeft"
            android:layout_marginRight="@dimen/margRight"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            />

    </RelativeLayout>

</ScrollView>