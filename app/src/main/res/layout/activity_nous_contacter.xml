<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NousContacter">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si vous êtes vraiment intéressé, veuillez
choisir dans la case ci-dessous le moyen
par lequel nous prendrons contact avec
vous quelques temps après que vous aurez
envoyé la requête"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv"
        android:layout_marginTop="50dp"
        >



            <ImageView
                android:id="@+id/id_appel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_appel"
                android:onClick="Contact"
                />


            <ImageView
                android:id="@+id/id_whats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_whats"
                android:onClick="Contact"
                />


            <ImageView
                android:id="@+id/id_teleg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_teleg"
                android:onClick="Contact"
                />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Téléphone"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Telegram"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp"
            />

    </LinearLayout>

</RelativeLayout>