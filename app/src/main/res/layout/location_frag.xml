    <LinearLayout
        android:id="@+id/llay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:id="@+id/mais_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_mais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Maisons" />

            <View
                android:id="@+id/v1"
                android:layout_width="62dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/red_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RÃ©sidences"
                android:textColor="@color/text_normal_color"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <View
                android:id="@+id/v2"
                android:layout_width="85dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/black"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotels"
                android:textSize="16sp"
                android:textColor="@color/text_normal_color"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

            <View
                android:id="@+id/v3"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:background="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aub_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_aub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auberges"
                android:textStyle="bold"
                android:textColor="@color/text_normal_color"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                />

            <View
                android:id="@+id/v4"
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_marginLeft="20dp"

                />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/loc_framL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llay"
        >

    </FrameLayout>

</RelativeLayout>